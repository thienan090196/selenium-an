<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite" verbose="1" thread-count="2" parallel="tests">
    <test name="Chrome Test">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.logigear.tests.LoginTest"/>
            <class name="com.logigear.tests.RegisterTest"/>
            <class name="com.logigear.tests.BookTicketTest"/>
            <class name="com.logigear.tests.MyTicketTest"/>
            <class name="com.logigear.tests.ChangePasswordTest"/>
        </classes>
    </test>
    <test name="Firefox Test">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.logigear.tests.LoginTest"/>
            <class name="com.logigear.tests.RegisterTest"/>
            <class name="com.logigear.tests.BookTicketTest"/>
            <class name="com.logigear.tests.MyTicketTest"/>
            <class name="com.logigear.tests.ChangePasswordTest"/>
        </classes>
    </test>
</suite>
